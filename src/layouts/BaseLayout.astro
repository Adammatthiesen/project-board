---
import "../styles/global.css";
import ThemeManager from '../components/ThemeManager.astro';
import ThemeSelector from '../components/ThemeSelector.astro';
import { config } from "src/config";

interface Props {
  title: string;
  description: string;
  slug: string;
  avatarUrl?: string;
}

const { title, description, slug, avatarUrl } = Astro.props;

const baseUrl = process.env.NODE_ENV === 'development'
  ? "http://localhost:4321"
  : new URL(Astro.site || Astro.request.url).origin;

const ogImage = new URL(`/open-graph/${slug}.png`, baseUrl).toString();

const themeColor = config.openGraph?.themeColor || '#1d4ed8';
const faviconPath = config.openGraph?.favicon?.path || '/favicon.svg';
const faviconType = config.openGraph?.favicon?.type || 'image/svg+xml';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content={themeColor} />
    <link rel="icon" type={faviconType} href={faviconPath} />

    <title>{title}</title>
    <meta name="description" content={description}>

    <meta property="og:url" content={baseUrl}>
    <meta property="og:type" content="website">
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={ogImage}>

    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:domain" content={baseUrl}>
    <meta property="twitter:url" content={baseUrl}>
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content={ogImage}>

    <ThemeManager defaultTheme="auto" />
  </head>
  <body>
    <ThemeSelector />
    <div class="container">
      <header>
        <div class="header-content">
          {avatarUrl && (
            <img src={avatarUrl} alt="Organization avatar" class="org-avatar" />
          )}
          <div class="header-text">
            <h1>{title}</h1>
            <p class="subtitle">{description}</p>
          </div>
        </div>
        <nav class="nav-links">
          <slot name="navigation" />
        </nav>
      </header>
      
      <main>
        <slot />
      </main>
      
      <footer>
        <slot name="footer" />
      </footer>
    </div>
  </body>
</html>
